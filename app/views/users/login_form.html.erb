<% if @user.errors.any? %>
  <ul class="errors">
    <% @user.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<main>
  <h2>Log In</h2>

  <%= form_with model: @user, class: 'login__form', url: login_path do |f| %>
  <div class = 'form-group'>
    <%= f.label :username %>
    <%= f.text_field :username, class:'form-control'%>
  </div>
  <div class = 'form-group'>
    <%= f.submit "Log In", class: 'btn btn-primary' %>
  </div>
  <% end %>
</main>